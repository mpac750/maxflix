@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@model List<DA1.Models.MovieViewModel>
<link href="~/css/card.css" rel="stylesheet" />
<link href="~/css/imgcatagory.css" rel="stylesheet" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/image/hinhanhtrangchu1.png" alt="1 slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/image/hinhanhtrangchu2.jpg" alt="2 slide">
            </div>
            <div class="carousel-item ">
                <img class="d-block w-100" src="~/image/hinhanhtrangchu3.jpg" alt="3 slide">
            </div>
            <div class="carousel-item ">
                <img class="d-block w-100" src="~/image/hinhanhtrangchu4.jpg" alt="4 slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/image/hinhanhtrangchu5.png" alt="5 slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<link href="~/css/card image.css" rel="stylesheet" />
<hr />

<div class="container">
    <h3 class="h3">PhimMới</h3>
    <div class="row">
        @foreach (var item in Model.OrderByDescending(x => x.MovieId).Take(4))
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
                <figure class="card card-product">
                    <div class="img-wrap">
                        <a asp-area="Users" asp-controller="MovieViewModels" asp-action="Details" asp-route-id="@item.MovieId">
                            <img src="~/image/@item.MovieImage">
                        </a>
                    </div>

                </figure> <!-- card // -->
            </div> <!-- col // -->
        }
    </div> <!-- row.// -->
</div>

