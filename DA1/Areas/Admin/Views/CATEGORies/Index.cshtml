@model IEnumerable<DA1.Areas.Admin.Models.CATEGORY>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">THỂ LOẠI</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Tạo Mới</a>
</div>
<table class="table table-dark ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a  class=" fa-sm text-white-50" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a class=" fa-sm text-white-50" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a  class=" fa-sm text-white-50" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
